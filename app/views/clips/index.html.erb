<p id="notice"><%= notice %></p>

<h1>Listing Clips</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clips.each do |clip| %>
      <tr>
        <td><%= clip.description %></td>
        <td><%= clip.user.email if clip.user %></td>
        <td><%= link_to 'Show', clip %></td>
        <% if clip.user == current_user %>
        <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
        <td><%= link_to 'Destroy', clip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Clip', new_clip_path %>
<% end %>
